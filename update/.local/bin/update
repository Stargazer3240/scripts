#!/bin/sh
BCYAN="\033[36;1m"
NC="\033[0m"
printf "${BCYAN}Updating DNF:\n${NC}"
sudo dnf upgrade -y
sudo dnf autoremove -y
printf "\n\n${BCYAN}Updating Flatpak:\n${NC}"
flatpak upgrade -y
flatpak uninstall --unused --delete-data
printf "\n${BCYAN}Updating Firmware:\n${NC}"
fwupdmgr refresh
fwupdmgr upgrade
printf "\n${BCYAN}Updating Nix:\n${NC}"
nix-channel --update
home-manager switch
nix flake update ~/.config/home-manager/
